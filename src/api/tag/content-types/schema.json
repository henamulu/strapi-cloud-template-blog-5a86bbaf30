{
    "kind": "collectionType",
    "collectionName": "tags",
    "info": {
      "singularName": "tag",
      "pluralName": "tags",
      "displayName": "Tag",
      "description": "Tags para los posts del blog"
    },
    "options": {
      "draftAndPublish": true
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true,
        "unique": true
      },
      "posts": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::post.post",
        "mappedBy": "tags"
      }
    }
  } 